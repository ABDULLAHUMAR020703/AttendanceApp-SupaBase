# API Gateway Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
# Port for the API Gateway service
PORT=3000

# Host to bind to (0.0.0.0 allows connections from all interfaces, including devices)
# Use 0.0.0.0 for device access, localhost for local-only access
HOST=0.0.0.0

# Auth Service Configuration
# URL of the Auth Service (default: http://localhost:3001)
# This should match the port where your Auth Service is running
AUTH_SERVICE_URL=http://localhost:3001
